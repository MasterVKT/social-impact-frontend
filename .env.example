# Social Finance Impact Platform - Environment Variables
# Copy this file to .env and fill in your actual values

# ======================================
# STRIPE CONFIGURATION
# ======================================
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY_TEST=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY_TEST=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY_LIVE=pk_live_your_publishable_key_here
STRIPE_SECRET_KEY_LIVE=sk_live_your_secret_key_here

# Stripe Webhook Secret (for Cloud Functions)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ======================================
# SUMSUB KYC CONFIGURATION
# ======================================
# Get these from: https://cockpit.sumsub.com/
SUMSUB_APP_TOKEN=your_sumsub_app_token_here
SUMSUB_SECRET_KEY=your_sumsub_secret_key_here
SUMSUB_LEVEL_NAME_CONTRIBUTOR=basic-kyc-level
SUMSUB_LEVEL_NAME_CREATOR=advanced-kyc-level

# ======================================
# FIREBASE CONFIGURATION
# ======================================
# Project ID (from Firebase Console)
FIREBASE_PROJECT_ID=social-impact-mvp

# Firebase Web API Key (from Firebase Console > Project Settings > Web API Key)
FIREBASE_WEB_API_KEY=your_firebase_web_api_key_here

# Firebase Messaging Server Key (for push notifications)
FIREBASE_MESSAGING_SERVER_KEY=your_firebase_server_key_here

# ======================================
# APP CONFIGURATION
# ======================================
# Environment: development, staging, production
ENVIRONMENT=development

# API Base URL (Cloud Functions URL)
API_BASE_URL=https://us-central1-social-impact-mvp.cloudfunctions.net

# App URL (for deep linking and sharing)
APP_URL_ANDROID=https://socialimpact.app
APP_URL_IOS=https://socialimpact.app
APP_URL_WEB=https://socialimpact.app

# ======================================
# FEATURE FLAGS
# ======================================
ENABLE_ANALYTICS=true
ENABLE_CRASHLYTICS=true
ENABLE_BIOMETRIC_AUTH=true
ENABLE_APPLE_PAY=true
ENABLE_GOOGLE_PAY=true

# ======================================
# TESTING
# ======================================
# Use test mode for Stripe and Sumsub during development
USE_TEST_MODE=true
